<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Administration</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body style="padding-bottom:0px;height:100%;">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kumaranalloor Temple", "Index", "Home", new { area = "" }, new { @class = "navbar-brand-title" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="color:#d9d9d9">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Vazhipadu", "Index", "Vazhipadu")</li>
                    <li>@Html.ActionLink("Notifications", "Index", "Notifications")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="width:100%;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer class="panel-footer" style="width:100%;min-height:40px; left:0px;text-align:left;position:relative;padding:0px;bottom:0px;position:relative;">
        <p style="color:#808080;height:30px;padding:10px;">&copy; @DateTime.Now.Year - Kumaranalloor Devi Temple</p>
        <br />
    </footer>
</body>
</html>
